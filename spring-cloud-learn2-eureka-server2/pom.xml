    <groupId>indi.tudan</groupId>
    <artifactId>spring-cloud-learn2-eureka-server2</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>spring-cloud-learn2-eureka-server2</name>
    <description>Eureka 注册中心 2</description>

    <parent>
